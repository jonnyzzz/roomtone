{
  "name": "roomtone",
  "version": "0.2.0",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:web\"",
    "dev:web": "vite",
    "dev:server": "tsx watch server/index.ts",
    "dev:bot": "tsx watch bot/index.ts",
    "build": "vite build && tsc -p tsconfig.server.json && tsc -p tsconfig.bot.json",
    "start": "node dist/server/index.js",
    "start:bot": "node dist/bot/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "npm run build && playwright test",
    "pentest:auth": "./scripts/pentest-auth.sh"
  },
  "dependencies": {
    "express": "^4.19.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.17.10",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/ws": "^8.5.13",
    "@vitejs/plugin-react": "^4.3.3",
    "concurrently": "^9.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vitest": "^2.1.4"
  }
}
